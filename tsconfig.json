{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "es2016"
    ],
    "outDir": "tsc-out",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "removeComments": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}

