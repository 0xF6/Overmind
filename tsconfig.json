{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "es2016"
    ],
    "outDir": "tsc-out",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "noImplicitThis": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "types": [
      "lodash",
      "typed-screeps"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}

