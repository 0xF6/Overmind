{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "removeComments": false,
    "noEmitOnError": true,
    "noImplicitThis": false,
    "noResolve": false,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "baseUrl": "./src/",
    "outDir": "./dist/",
    "allowJs": true,
    "lib": [
      "dom",
      "es2016"
    ],
    "types": ["lodash", "typed-screeps", "screeps-profiler"]
  },
  "compileOnSave": false,
  "include": [
    "webpack.config.ts",
    "config/*.ts",
    "libs/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/snippets"
  ]
}

